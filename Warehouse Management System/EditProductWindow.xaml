<UserControl x:Class="Warehouse_Management_System.EditProductWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <StackPanel Margin="20">

            <TextBlock Text="Название:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" Height="25" Margin="0,0,0,10"
                     BorderThickness="0.5" BorderBrush="{DynamicResource ForegroundBrush}"/>

            <TextBlock Text="Количество:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="QuantityTextBox" Height="25" Margin="0,0,0,10"
                     BorderThickness="0.5" BorderBrush="{DynamicResource ForegroundBrush}"/>

            <TextBlock Text="Цена:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceTextBox" Height="25" Margin="0,0,0,10"
                     BorderThickness="0.5" BorderBrush="{DynamicResource ForegroundBrush}"/>

            <TextBlock Text="Категория:" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryComboBox"
                      Height="32"
                      Margin="0,0,0,25"
                      BorderThickness="0.5"
                      BorderBrush="{DynamicResource ForegroundBrush}">
                <ComboBoxItem Content="Смартфоны"/>
                <ComboBoxItem Content="Ноутбуки"/>
                <ComboBoxItem Content="Планшеты"/>
                <ComboBoxItem Content="Аксессуары"/>
                <ComboBoxItem Content="Комплектующие"/>
                <ComboBoxItem Content="Без категории"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Сохранить"
                        Width="110"
                        Height="35"
                        Click="Save_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
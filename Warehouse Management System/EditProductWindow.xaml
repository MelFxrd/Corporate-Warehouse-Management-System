<UserControl x:Class="Warehouse_Management_System.EditProductWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Warehouse_Management_System"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource BackgroundBrush}">
        <StackPanel Margin="20">
            <TextBlock Text="Название:" Foreground="{DynamicResource ForegroundBrush}" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10" Height="25" FontSize="14" BorderThickness="0.5" BorderBrush="{DynamicResource ForegroundBrush}"/>

            <TextBlock Text="Количество:" Foreground="{DynamicResource ForegroundBrush}" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,0,0,10" Height="25" FontSize="14" BorderThickness="0.5" BorderBrush="{DynamicResource ForegroundBrush}"/>

            <TextBlock Text="Цена:" Foreground="{DynamicResource ForegroundBrush}" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceTextBox" Margin="0,0,0,10" Height="25" FontSize="14" BorderThickness="0.5" BorderBrush="{DynamicResource ForegroundBrush}"/>

            <TextBlock Text="Категория:" Foreground="{DynamicResource ForegroundBrush}" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryComboBox" Margin="0,0,0,20" Height="32" FontSize="14" BorderThickness="0.5" BorderBrush="{DynamicResource ForegroundBrush}">
                <ComboBoxItem Content="Смартфоны"/>
                <ComboBoxItem Content="Ноутбуки"/>
                <ComboBoxItem Content="Планшеты"/>
                <ComboBoxItem Content="Аксессуары"/>
                <ComboBoxItem Content="Комплектующие"/>
                <ComboBoxItem Content="Без категории"/>
            </ComboBox>

            <Button Content="Сохранить" Click="Save_Click" Width="100" Height="35" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="Warehouse_Management_System.EditProductWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Warehouse_Management_System"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название:"/>
            <TextBox x:Name="NameTextBox" Margin="0,5"/>
            <TextBlock Text="Количество:"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,5"/>
            <TextBlock Text="Цена:"/>
            <TextBox x:Name="PriceTextBox" Margin="0,5"/>
            <Button Content="Сохранить" Click="Save_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
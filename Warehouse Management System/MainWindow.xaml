<Window x:Class="Warehouse_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse_Management_System"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}"
        mc:Ignorable="d"
        Title="Главное меню" Height="600" Width="1010">

    <Window.Resources>
        <Style x:Key="CenteredCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox x:Name="SearchTextBox" Width="200" Margin="5" BorderThickness="0.8"
                         BorderBrush="{DynamicResource ForegroundBrush}" TextChanged="SearchTextBox_TextChanged"/>
                <Button Content="Поиск" Click="Search_Click" Width="100" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Категория:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox x:Name="CategoryFilterComboBox" Width="180" Margin="5" SelectedIndex="0"
                          Style="{StaticResource {x:Type ComboBox}}">
                    <ComboBoxItem Content="Все" IsSelected="True"/>
                    <ComboBoxItem Content="Смартфоны"/>
                    <ComboBoxItem Content="Ноутбуки"/>
                    <ComboBoxItem Content="Планшеты"/>
                    <ComboBoxItem Content="Аксессуары"/>
                    <ComboBoxItem Content="Комплектующие"/>
                    <ComboBoxItem Content="Без категории"/>
                </ComboBox>
            </StackPanel>

            <DataGrid x:Name="ProductsGrid" AutoGenerateColumns="False" Height="300" Margin="5"
                      RowBackground="{DynamicResource BackgroundBrush}"
                      AlternatingRowBackground="{DynamicResource BackgroundBrush}"
                      GridLinesVisibility="None"
                      SelectionMode="Single" SelectionUnit="FullRow"
                      HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"
                                        ElementStyle="{StaticResource CenteredCellStyle}"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="250"
                                        ElementStyle="{StaticResource CenteredCellStyle}"/>
                    <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"
                                        ElementStyle="{StaticResource CenteredCellStyle}"/>
                    <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"
                                        ElementStyle="{StaticResource CenteredCellStyle}"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="150"
                                        ElementStyle="{StaticResource CenteredCellStyle}"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                        <Setter Property="Height" Value="28"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGray"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="Добавить товар" Click="AddProduct_Click" Width="140" Margin="5"/>
                <Button Content="Редактировать товар" Click="EditProduct_Click" Width="140" Margin="5"/>
                <Button Content="Удалить товар" Click="DeleteProduct_Click" Width="140" Margin="5"/>
                <Button Content="История" Click="LogHistory_Click" Width="140" Margin="5"/>
                <Button Content="Отчёт" Click="Report_Click" Width="100" Margin="5" Background="OrangeRed" Foreground="White"/>
                <Button Content="Экспорт в Excel" Click="ExportToExcel_Click" Width="130" Margin="5" Background="Green" Foreground="White"/>
                <ToggleButton x:Name="ThemeToggle" Content="Тёмная тема" Width="100" Height="28" Margin="5"
                              Style="{StaticResource ThemeToggleStyle}"
                              Checked="ThemeToggle_Checked" Unchecked="ThemeToggle_Unchecked"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
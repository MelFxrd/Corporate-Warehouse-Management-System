<Window x:Class="Warehouse_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse_Management_System"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="ProductsGrid" ItemsSource="{Binding Products}" AutoGenerateColumns="True" SelectionMode="Single" />
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="Добавь товарt" Click="AddProduct_Click" Margin="0,0,5,0" />
                <Button Content="Изменить товар" Click="EditProduct_Click" Margin="0,0,5,0" />
                <Button Content="Удалить товар" Click="DeleteProduct_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

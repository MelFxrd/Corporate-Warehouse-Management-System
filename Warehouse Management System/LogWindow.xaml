<UserControl x:Class="Warehouse_Management_System.LogWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Warehouse_Management_System"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="LogsGrid" AutoGenerateColumns="False" Margin="10" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Операция" Binding="{Binding Operation}" Width="130"/>
                <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="200"/>
                <DataGridTextColumn Header="Время" Binding="{Binding Timestamp, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>